<!-- This file contains information for publishing this artifact.  The credentials will be injected by the build job.-->
<settings>
    <servers>
        <server>
            <id>fan360-nexus</id>
            <username>${env.PUBLISH_USERNAME}</username>
            <password>${env.PUBLISH_PASSWORD}</password>
        </server>
        <server>
            <id>fan360-nexus-snapshots</id>
            <username>${env.PUBLISH_USERNAME}</username>
            <password>${env.PUBLISH_PASSWORD}</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>local-development</id>
            <repositories>
                <repository>
                    <id>fan360-nexus</id>
                    <name>Nexus FTS</name>
                    <url>https://nexus.fanthreesixty.com/repository/maven-public/</url>
                </repository>
            </repositories>
        </profile>
    </profiles>
    <activeProfiles>
        <activeProfile>local-development</activeProfile>
    </activeProfiles>
</settings>
